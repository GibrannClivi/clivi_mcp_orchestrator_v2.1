# Environment
ENV=production
PROJECT_NAME=mcp-orchestrator-v1
PORT=4001

# Chargebee Configuration
CHARGEBEE_SITE=your-chargebee-site
CHARGEBEE_API_KEY=your_chargebee_api_key

# Google AI Studio
GOOGLE_AISTUDIO_API_KEY=your_google_aistudio_api_key

# HubSpot Configuration
HUBSPOT_API_KEY=your_hubspot_api_key
HUBSPOT_PORTAL_ID=your_hubspot_portal_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
PRIVATE_APP_ACCESS_TOKEN=your_hubspot_private_app_token

# Google Cloud & Vertex AI
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./path/to/your/service-account.json

# Firebase/Firestore MCP Configuration
FIRESTORE_PROJECT_ID=your-firebase-project-id

# MCP Real Data Configuration
USE_REAL_MCP=true

# Cache configuration
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=INFO

# CORS
CORS_ALLOW_ORIGINS=*

# GraphQL Development
GRAPHQL_INTROSPECTION=true
GRAPHQL_PLAYGROUND=true
